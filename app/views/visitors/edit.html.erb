<div class="max-w-3xl mx-auto bg-gray-800 text-white p-6 rounded-lg shadow-lg mt-6">
    <h1 class="text-3xl font-bold mb-6">Edit Visitor</h1>

    <%= form_with model: @visitor, class: "bg-gray-700 p-6 rounded-lg shadow-md" do |visitor| %>
        <div class="mb-4">
            <%= visitor.label :name, class: "block text-white text-lg font-medium mb-2" %>
            <%= visitor.text_field :name, class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none " %><br>
        </div>

        <div class="mb-4">
            <%= visitor.label :cpf, class: "block text-white text-lg font-medium mb-2" %>
            <%= visitor.text_field :cpf, class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none "%><br>
        </div>

        <div class="mb-4">
            <%= visitor.label :rg, class: "block text-white text-lg font-medium mb-2" %>
            <%= visitor.text_field :rg, class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none "%><br>
        </div>

        <div class="mb-4">
            <%= visitor.label :telephone, class: "block text-white text-lg font-medium mb-2" %>
            <p>Example: 55 84 9 12345678</p>
            <%= visitor.telephone_field :telephone, class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none ", oninput: "this.value = this.value.replace(/[^0-9]/g, '')"%><br>
        </div>

        <% if @visitor.photo? %>
            <div class="mb-4 flex items-center space-x-4">
                <%= image_tag @visitor.photo.url, class: "w-20 h-20 rounded-full border-2 border-white object-cover"%>
                <span class="text-white text-lg">Current photo</span>
            </div>
        <% end %>
        <div class="mb-4">
            <%= visitor.label :photo, class: "block text-white text-lg font-medium mb-2" %>
            <%= visitor.file_field :photo, class: "w-full p-2 rounded-lg bg-gray-800 text-white border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:outline-none "%>
        </div>

        <div>
            <%= visitor.submit "Save", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition" %>
        </div>
    <% end %>

    <div class="mt-4">
        <%= link_to "Cancel", visitor_path, class: "bg-gray-600 hover:bg-gray-700 px-4 py-2 rounded-lg transition" %>
    </div>

</div>